.side-menu
  .side-menu__header

    .side-menu__header__group

      .side-menu__header__group__name
        = current_user.name              #今ログインしている奴の名前
      .side-menu__header__group__rigth

        .side-menu__header__group__rigth__new
          = link_to new_group_path, class: "new__icon" do
            %i.fa.fa-edit

        .side-menu__header__group__rigth__edit
          = link_to edit_user_path(current_user), class: "edit__icon" do
            %i.fa.fa-cog

  .side-menu__contents
    .side-menu__contents__groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class: "side-menu__contents__groups__kamiya" do
          .side-menu__contents__groups__kamiya__group
            .side-menu__contents__groups__kamiya__group__name
              = group.name
            %p.side-menu__contents__groups__kamiya__group__text
              = group.show_last_message